@{
    ViewData["Title"] = "IP Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .header {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            text-align: left;
            padding-left: 20px;
        }
        .header img {
            width: 100px;
            height: auto;
            vertical-align: middle;
        }
        .nav {
            background-color: #444;
            overflow: hidden;
        }
        .nav a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        .nav a:hover {
            background-color: #ddd;
            color: black;
        }
        .main {
            padding: 20px;
            text-align: center;
        }
        .main h1 {
            font-family: 'Brush Script MT', cursive;
        }
        .main h2 {
            font-family: 'Copperplate', 'Papyrus', fantasy;
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="https://ncsmadison.com/wp-content/uploads/2018/01/Zscaler-Logo-Blue-RGB-15Jun2015-768x278.png" alt="Zscaler Logo">
    </div>
    <div class="nav">
        <a href="#home">Zscaler IP Data</a>
        <a href="#address">Zscaler IP Address</a>
        <a href="#hostnames">Zscaler Hostnames</a>
    </div>
    <div class="main">
        <h1>IP Information</h1>
        <p>IP Address: @ViewData["IPAddress"]</p>
        <p>Zscaler Hostname: @ViewData["ZscalerHostname"]</p>
        <p>Location: @ViewData["Location"]</p>
    </div>
</body>
</html>